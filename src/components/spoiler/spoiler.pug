                    .spoiler__arrow-container
                        +svg({name: 's-arrow'}).spoiler__arrow
                else
                    .spoiler__plus
            .collapse(id=name data-parent="#" + name class= args.collapseClass class= args.noCollapsed ? 'show' : null)
                if(args && args.content)
                    .spoiler__content!= args.content
                else
                    .spoiler__content
